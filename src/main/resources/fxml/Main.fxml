<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<VBox prefHeight="900.0" prefWidth="1500.0" xmlns="http://javafx.com/javafx/8"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="threadmonitor.controller.Controller">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" text="New"/>
            <MenuItem mnemonicParsing="false" text="Open…"/>
            <Menu mnemonicParsing="false" text="Open Recent"/>
            <SeparatorMenuItem mnemonicParsing="false"/>
            <MenuItem mnemonicParsing="false" text="Close"/>
            <MenuItem mnemonicParsing="false" text="Save"/>
            <MenuItem mnemonicParsing="false" text="Save As…"/>
            <MenuItem mnemonicParsing="false" text="Revert"/>
            <SeparatorMenuItem mnemonicParsing="false"/>
            <MenuItem mnemonicParsing="false" text="Preferences…"/>
            <SeparatorMenuItem mnemonicParsing="false"/>
            <MenuItem mnemonicParsing="false" text="Quit"/>
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
          <items>
            <MenuItem mnemonicParsing="false" text="Undo"/>
            <MenuItem mnemonicParsing="false" text="Redo"/>
            <SeparatorMenuItem mnemonicParsing="false"/>
            <MenuItem mnemonicParsing="false" text="Cut"/>
            <MenuItem mnemonicParsing="false" text="Copy"/>
            <MenuItem mnemonicParsing="false" text="Paste"/>
            <MenuItem mnemonicParsing="false" text="Delete"/>
            <SeparatorMenuItem mnemonicParsing="false"/>
            <MenuItem mnemonicParsing="false" text="Select All"/>
            <MenuItem mnemonicParsing="false" text="Unselect All"/>
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About MyHelloApp"/>
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <SplitPane focusTraversable="true" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <items>
        <BorderPane prefHeight="200.0" prefWidth="200.0">
          <center>
            <SplitPane dividerPositions="0.5" orientation="VERTICAL">
              <items>
                <TabPane fx:id="prosessInfo" prefHeight="462.0" prefWidth="896.0">
                </TabPane>
                <TabPane fx:id="consoleTabPane" prefHeight="200.0" prefWidth="200.0"
                    style="-fx-max-height: 250;" styleClass="floating" tabClosingPolicy="ALL_TABS"
                    VBox.vgrow="ALWAYS"/>
              </items>
            </SplitPane>
          </center>
          <left>
            <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0"
                prefWidth="400.0" BorderPane.alignment="CENTER">
              <items>
                <TableView fx:id="progressListView" prefHeight="400.0" prefWidth="302.0">
                  <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                  </columnResizePolicy>
                  <columns>
                    <TableColumn fx:id="userColumn" prefWidth="75.0" text="用户"/>
                    <TableColumn fx:id="pidColumn" prefWidth="75.0" text="PID"/>
                    <TableColumn fx:id="cpuColumn" minWidth="1.0" prefWidth="75.0" text="CPU"/>
                    <TableColumn fx:id="memColumn" minWidth="1.0" prefWidth="75.0" text="内存"/>
                    <TableColumn fx:id="vszColumn" minWidth="1.0" prefWidth="75.0" text="虚"/>
                    <TableColumn fx:id="rssColumn" minWidth="1.0" prefWidth="75.0" text="实"/>
                    <TableColumn fx:id="statColumn" minWidth="1.0" prefWidth="75.0" text="状态"/>
                    <TableColumn fx:id="timeColumn" prefWidth="75.0" text="运行"/>
                    <TableColumn fx:id="commandColumn" minWidth="60.0" prefWidth="75.0" text="命令"/>
                  </columns>
                </TableView>
                <GridPane style="-fx-max-height: 250;">
                  <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                  </columnConstraints>
                  <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                  </rowConstraints>
                  <children>
                    <TextArea fx:id="sysInfoArea" editable="false" prefHeight="200.0"
                        prefWidth="200.0"/>
                  </children>
                </GridPane>
              </items>
            </SplitPane>
          </left>
          <right>
            <SplitPane dividerPositions="0.5" orientation="VERTICAL" BorderPane.alignment="CENTER">
              <items>
                <AnchorPane style="-fx-max-height: 80;">
                  <children>
                    <GridPane prefHeight="90.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0"
                        AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                        AnchorPane.topAnchor="0.0">
                      <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="40.0"
                            minWidth="40.0" prefWidth="100.0"/>
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="20.0"
                            minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0"
                            prefWidth="100.0"/>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0"
                            prefWidth="100.0"/>
                      </columnConstraints>
                      <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                      </rowConstraints>
                      <children>
                        <Label contentDisplay="RIGHT" text="命令："/>
                        <Label contentDisplay="RIGHT" text="描述：" GridPane.rowIndex="1"/>
                        <Button onAction="#saveCommand" mnemonicParsing="false" text="Add" GridPane.columnIndex="2"
                            GridPane.rowIndex="2"/>
                        <Button onAction="#resetCommandInput" mnemonicParsing="false" text="Clear" GridPane.columnIndex="3"
                            GridPane.rowIndex="2">
                          <GridPane.margin>
                            <Insets left="4.0"/>
                          </GridPane.margin>
                        </Button>
                        <TextField fx:id="command" prefHeight="23.0" prefWidth="97.0" GridPane.columnIndex="2"
                            GridPane.columnSpan="2">
                          <GridPane.margin>
                            <Insets right="5.0"/>
                          </GridPane.margin>
                        </TextField>
                        <TextField fx:id="commandDesc" GridPane.columnIndex="2" GridPane.columnSpan="2"
                            GridPane.rowIndex="1">
                          <GridPane.margin>
                            <Insets right="5.0"/>
                          </GridPane.margin>
                        </TextField>
                      </children>
                    </GridPane>
                  </children>
                </AnchorPane>
                <ListView fx:id="commandList" prefHeight="200.0" prefWidth="200.0"/>
              </items>
            </SplitPane>
          </right>
        </BorderPane>
      </items>
    </SplitPane>
    <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="NEVER">
      <children>
        <Label maxHeight="1.7976931348623157E308" maxWidth="-1.0" text="Left status"
            HBox.hgrow="ALWAYS">
          <font>
            <Font size="11.0" fx:id="x3"/>
          </font>
          <textFill>
            <Color blue="0.625" green="0.625" red="0.625" fx:id="x4"/>
          </textFill>
        </Label>
        <Pane prefHeight="-1.0" prefWidth="-1.0" HBox.hgrow="ALWAYS"/>
        <Label font="$x3" maxWidth="-1.0" text="Right status" textFill="$x4" HBox.hgrow="NEVER"/>
      </children>
      <padding>
        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
      </padding>
    </HBox>
  </children>
</VBox>
